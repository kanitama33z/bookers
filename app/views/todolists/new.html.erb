<h2>Books</h2>
	<table>
		<th>Title</th>
		<th>Body</th>
		<th colspan="3"></th>
	</table>

<% @books.each do |book| %>
	<main class="clearfix">
		<div class="title-box">
			<%= book.title %>
		</div>

		<div class="body-box">
			<%= book.body %>
		</div>

		
	</main>

<% end %>




<h3>New book</h3>
<%= form_for(@book, url:'/todolists') do |f| %>

	<h5>タイトル</h5>
	<%= f.text_field :title %>

	<h5>本文</h5>
	<%= f.text_area :body %><br>

	<%= f.submit 'create box' %>

<% end %>


