<body>
	<h1 class="main-title">Books</h1>
	<table>
		<thead>
			<tr>
				<th>Title</th>
				<th>Body</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% @books.each do |book| %>
				<tr>
					<div class="clearfix">
						<td class="title-box">
							<%= book.title %>
						</td>
						<td class="body-box">
							<%= book.body %>
						</td>
						<td>
								<%= link_to "Show", show_book_path(book.id) %>
								<%= link_to "Edit", edit_book_path(book.id) %>
								<%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
						</td>
					</div>
				</tr>
			<% end %>
		</tbody>
	</table>

	<h2>New book</h2>
	<%= form_for(@book, url:'/books') do |f| %>
		<h5>Title</h5>
		<%= f.text_field :title %>
		<h5>Body</h5>
		<%= f.text_area :body %><br>
		<%= f.submit 'create box' %>
	<% end %>
</body>
